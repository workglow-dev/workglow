{
  "name": "@workglow/cli",
  "type": "module",
  "version": "0.0.98",
  "description": "Command-line interface example for Workglow, demonstrating how to build and run AI task pipelines from the terminal.",
  "scripts": {
    "dev": "concurrently -c 'auto' -n 'cli:' 'bun:dev-*'",
    "dev-js": "bun build --watch --target=node --sourcemap=external --packages=external --outdir ./dist ./src/workglow.ts",
    "dev-lib": "bun build --watch --target=node --sourcemap=external --packages=external --outdir ./dist ./src/lib.ts",
    "dev-types": "tsc --watch --preserveWatchOutput",
    "build-example": "bun run build-clean && concurrently -c 'auto' -n 'js,js-worker,js-worker-hft,lib, types' 'bun run build-js' 'bun run build-js-worker' 'bun run build-js-worker-hft' 'bun run build-lib' 'bun run build-types'",
    "build-clean": "rm -fr dist/* tsconfig.tsbuildinfo",
    "build-js": "bun build --target=bun --packages=external --outdir ./dist ./src/workglow.ts",
    "build-js-worker": "bun build --target=node --packages=external --outdir ./dist ./src/workglow_worker.ts",
    "build-js-worker-hft": "bun build --target=node --packages=external --outdir ./dist ./src/worker_hft.ts",
    "build-lib": "bun build --target=bun --packages=external --outdir ./dist ./src/lib.ts",
    "build-types": "rm -f tsconfig.tsbuildinfo && tsc",
    "test": "echo \"Error: no test specified\" && exit 1",
    "prepare": "node -e \"const pkg=require('./package.json');pkg.exports['.'].bun='./dist/lib.js';pkg.exports['.'].types='./dist/lib.d.ts';require('fs').writeFileSync('package.json',JSON.stringify(pkg,null,2))\""
  },
  "bin": "./dist/workglow.js",
  "files": [
    "dist",
    "src/**/*.md"
  ],
  "exports": {
    ".": {
      "bun": "./dist/lib.js",
      "types": "./dist/lib.d.ts",
      "import": "./dist/lib.js"
    }
  },
  "dependencies": {
    "@workglow/ai": "workspace:*",
    "@workglow/ai-provider": "workspace:*",
    "@workglow/storage": "workspace:*",
    "@workglow/task-graph": "workspace:*",
    "@workglow/tasks": "workspace:*",
    "@workglow/util": "workspace:*",
    "@mediapipe/tasks-text": "catalog:",
    "@mediapipe/tasks-vision": "catalog:",
    "@mediapipe/tasks-audio": "catalog:",
    "@mediapipe/tasks-genai": "catalog:",
    "@sroussey/transformers": "catalog:",
    "@types/react": "^19.2.14",
    "chalk": "^5.6.2",
    "commander": "^14.0.3",
    "ink": "^6.8.0",
    "is-unicode-supported": "^2.1.0",
    "react": "^19.2.4",
    "react-reconciler": "^0.33.0",
    "react-devtools-core": "^7.0.1"
  },
  "publishConfig": {
    "access": "public"
  }
}