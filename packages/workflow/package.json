{
  "name": "workglow",
  "type": "module",
  "version": "0.0.90",
  "description": "Workglow meta-package: re-exports all @workglow/* packages for convenient single-import usage.",
  "scripts": {
    "watch": "concurrently -c 'auto' 'bun:watch-*'",
    "watch-code": "bun build --watch --no-clear-screen --sourcemap=external --packages=external --root ./src --outdir ./dist ./src/browser.ts ./src/node.ts ./src/bun.ts ./src/anthropic.ts ./src/google-gemini.ts ./src/hf-transformers.ts ./src/ollama.ts ./src/openai.ts ./src/tf-mediapipe.ts",
    "watch-types": "tsc --watch --preserveWatchOutput",
    "build-package": "bun run build-clean && bun run build-code && bun run build-types",
    "build-clean": "rm -fr dist/*",
    "build-code": "bun build --sourcemap=external --packages=external --root ./src --outdir ./dist ./src/browser.ts ./src/node.ts ./src/bun.ts ./src/anthropic.ts ./src/google-gemini.ts ./src/hf-transformers.ts ./src/ollama.ts ./src/openai.ts ./src/tf-mediapipe.ts",
    "build-types": "rm -f tsconfig.tsbuildinfo && tsc",
    "lint": "eslint . --ext ts,tsx --report-unused-disable-directives --max-warnings 0",
    "test": "bun test",
    "prepare": "node -e \"const pkg=require('./package.json');pkg.exports['.'].bun='./dist/bun.js';pkg.exports['.'].types='./dist/types.d.ts';['anthropic','google-gemini','hf-transformers','ollama','openai','tf-mediapipe'].forEach(p=>{const k='./'+p;if(!pkg.exports[k])pkg.exports[k]={};pkg.exports[k].bun='./dist/'+p+'.js';pkg.exports[k].types='./dist/'+p+'.d.ts'});require('fs').writeFileSync('package.json',JSON.stringify(pkg,null,2))\""
  },
  "exports": {
    ".": {
      "react-native": "./dist/browser.js",
      "browser": "./dist/browser.js",
      "bun": "./dist/bun.js",
      "types": "./dist/types.d.ts",
      "import": "./dist/node.js"
    },
    "./anthropic": {
      "bun": "./dist/anthropic.js",
      "types": "./dist/anthropic.d.ts",
      "import": "./dist/anthropic.js"
    },
    "./google-gemini": {
      "bun": "./dist/google-gemini.js",
      "types": "./dist/google-gemini.d.ts",
      "import": "./dist/google-gemini.js"
    },
    "./hf-transformers": {
      "bun": "./dist/hf-transformers.js",
      "types": "./dist/hf-transformers.d.ts",
      "import": "./dist/hf-transformers.js"
    },
    "./ollama": {
      "bun": "./dist/ollama.js",
      "types": "./dist/ollama.d.ts",
      "import": "./dist/ollama.js"
    },
    "./openai": {
      "bun": "./dist/openai.js",
      "types": "./dist/openai.d.ts",
      "import": "./dist/openai.js"
    },
    "./tf-mediapipe": {
      "browser": "./dist/tf-mediapipe.js",
      "types": "./dist/tf-mediapipe.d.ts"
    }
  },
  "files": [
    "dist",
    "src/**/*.md"
  ],
  "publishConfig": {
    "access": "public"
  },
  "dependencies": {
    "@workglow/ai": "workspace:*",
    "@workglow/ai-provider": "workspace:*",
    "@workglow/dataset": "workspace:*",
    "@workglow/debug": "workspace:*",
    "@workglow/job-queue": "workspace:*",
    "@workglow/sqlite": "workspace:*",
    "@workglow/storage": "workspace:*",
    "@workglow/task-graph": "workspace:*",
    "@workglow/tasks": "workspace:*",
    "@workglow/util": "workspace:*"
  },
  "peerDependencies": {
    "@sroussey/transformers": "catalog:",
    "@mediapipe/tasks-text": "catalog:",
    "@mediapipe/tasks-vision": "catalog:",
    "@mediapipe/tasks-audio": "catalog:",
    "@mediapipe/tasks-genai": "catalog:",
    "openai": "catalog:",
    "@anthropic-ai/sdk": "catalog:",
    "@google/generative-ai": "catalog:",
    "ollama": "catalog:",
    "@sqlite.org/sqlite-wasm": "^3.51.2-build6",
    "better-sqlite3": "^12.6.2",
    "pg": "^8.18.0",
    "@supabase/supabase-js": "=2.95.3"
  },
  "peerDependenciesMeta": {
    "@sroussey/transformers": {
      "optional": true
    },
    "@mediapipe/tasks-text": {
      "optional": true
    },
    "@mediapipe/tasks-vision": {
      "optional": true
    },
    "@mediapipe/tasks-audio": {
      "optional": true
    },
    "@mediapipe/tasks-genai": {
      "optional": true
    },
    "openai": {
      "optional": true
    },
    "@anthropic-ai/sdk": {
      "optional": true
    },
    "@google/generative-ai": {
      "optional": true
    },
    "ollama": {
      "optional": true
    },
    "@sqlite.org/sqlite-wasm": {
      "optional": true
    },
    "better-sqlite3": {
      "optional": true
    },
    "pg": {
      "optional": true
    },
    "@supabase/supabase-js": {
      "optional": true
    }
  }
}